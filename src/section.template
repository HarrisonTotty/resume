$[ do require('this.source', 'this.title') ]$

$[ set full_content = get(this.source) ]$

%-------------------------------------------------------------------------------
%	SECTION TITLE
%-------------------------------------------------------------------------------
\cvsection{[[ this.title ]]}


%-------------------------------------------------------------------------------
%	CONTENT
%-------------------------------------------------------------------------------
\begin{cventries}

$[ for i in content[this.source] ]$
$[ for item_name, item in full_content.items() ]$
$[ if i == item_name ]$

  \cventry
    {[[ item.desc ]]}
    {[[ item.header ]]}
    {[[ item.location ]]}
    {[[ item.dates ]]}
    {
      \begin{cvitems}
$[ if item.content is defined ]$
$[ for i in item.content ]$
        \item {[[ i ]]}
$[ endfor ]$
$[ endif ]$
      \end{cvitems}
    }

$[ break ]$
$[ endif ]$
$[ endfor ]$
$[ endfor ]$


\end{cventries}
